{
	"name": "react-bella-email",
	"version": "0.9.6",
	"private": false,
	"homepage": "https://react-bella-email.netlify.app",
	"bugs": {
		"url": "https://github.com/smastrom/react-bella-email/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/smastrom/react-bella-email"
	},
	"license": "MIT",
	"author": "Simone Mastromattei <smastrom@proton.me>",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.umd.js"
		}
	},
	"main": "dist/index.umd.js",
	"module": "dist/index.js",
	"browser": "dist/index.umd.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsc && vite build && yarn declare",
		"postbuild": "cpy src/types.d.ts dist --rename index.d.ts --flat && rimraf src/types.d.ts",
		"build:app": "tsc && vite build --mode app",
		"declare": "tsc src/types.ts --declaration --emitDeclarationOnly --jsx react-jsx",
		"dev": "vite",
		"preview": "vite preview",
		"test": "yarn cypress run --component",
		"test:gui": "yarn cypress open --component",
		"prepare": "husky install"
	},
	"lint-staged": {
		"*.{ts,tsx}": "eslint --cache --fix",
		"*.{ts,tsx,css,json,md}": "prettier --write"
	},
	"devDependencies": {
		"@types/react": "^17.0.2",
		"@types/react-dom": "^17.0.2",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"@vitejs/plugin-react": "^2.2.0",
		"axe-core": "^4.5.2",
		"cpy-cli": "^4.2.0",
		"cypress": "^11.2.0",
		"cypress-axe": "^1.1.0",
		"cypress-real-events": "^1.7.4",
		"eslint": "^8.29.0",
		"eslint-plugin-react": "^7.31.11",
		"eslint-plugin-react-hooks": "^4.6.0",
		"husky": "^8.0.0",
		"lint-staged": "^13.1.0",
		"prettier": "^2.8.0",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"rollup-plugin-terser": "^7.0.2",
		"typescript": "^4.9.3",
		"vite": "^3.2.4"
	},
	"peerDependencies": {
		"react": ">=17",
		"react-dom": ">=17"
	}
}
